</div>
{% include 'partials/footer.html.twig' %}

<!-- jQuery if you need it
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
-->
{% block bottom %}
    {% do assets.AddJs('theme://js/gravtail.js') %}
    {{ assets.js() }}
{% endblock %}


</body>

</html>

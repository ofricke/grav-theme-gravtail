<section class="bg-white border-b py-8">
    <div class="container max-w-5xl mx-auto m-8">
        <h1 class="w-full my-2 text-5xl font-bold leading-tight text-center text-gray-800">{{  page.header.title }}</h1>
        <div class="w-full mb-4">
            <div class="h-1 mx-auto gradient w-64 opacity-25 my-0 py-0 rounded-t"></div>
        </div>
        {% for service in page.header.services %}
            {% set counter = ( counter | default(0) ) + 1 %}
            <div class="flex flex-wrap">
                {% if counter % 2 == 0 %}
                <div class="w-full sm:w-1/2 p-6 mt-6">
                    <!-- picture in te voegen -->
                    <img src="{{ page.media[service.image].url }}" alt="">
                </div>
                {% endif %}
                <div class="w-5/6 sm:w-1/2 p-6">
                    <h3 class="text-3xl text-gray-800 font-bold leading-none mb-3">{{ service.header }}</h3>
                    <p class="text-gray-600 mb-8">{{ service.text }}<br/><br/>

                        </p>

                </div>
                {% if counter % 2 != 0 %}
                <div class="w-full sm:w-1/2 p-6">
                    <img src="{{ page.media[service.image].url }}" alt="" style="width:100%">

                </div>
                {% endif %}
            </div>
        {% endfor %}
    </div>
</section>